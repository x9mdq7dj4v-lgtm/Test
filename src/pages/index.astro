---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Heyete System Status">
  <div class="status-wrapper">
    <div id="loading" class="loading">
      <div class="spinner"></div>
      <p>システムステータスを確認中...</p>
    </div>
    <div id="status-content" style="display: none;"></div>
  </div>
</Layout>

<script>
  // SVGアイコンの定義
  const icons = {
    ok: `<svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>`,
    warn: `<svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>`,
    down: `<svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>`,
    unknown: `<svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>`,
    maintenance: `<svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>`
  };

  function setHeyeteCookie(name: string, value: string, maxAgeSeconds: number) {
    const domain = "backup-status.heyete.net";
    const options = `max-age=${maxAgeSeconds}; domain=${domain}; path=/; samesite=strict; secure`;
    document.cookie = `${name}=${encodeURIComponent(value)}; ${options}`;
  }

  function getHeyeteCookie(name: string): string | null {
    const match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
    if (match) return decodeURIComponent(match[2]);
    return null;
  }

  async function loadStatus() {
    const timeCookie = 'h_for-now-lol';
    const dataCookie = 'h_provisional-lol';
    const now = Date.now();

    const cachedTimeStr = getHeyeteCookie(timeCookie);
    if (cachedTimeStr) {
      const cachedTime = parseInt(cachedTimeStr, 10);
      if (now - cachedTime < 30000) {
        const cachedDataStr = getHeyeteCookie(dataCookie);
        if (cachedDataStr) {
          try {
            const data = JSON.parse(cachedDataStr);
            renderStatus(data);
            return; 
          } catch(e) {
            console.error('キャッシュデータのパースに失敗しました', e);
          }
        }
      }
    }

    try {
      const rawUrl = 'https://raw.githubusercontent.com/x9mdq7dj4v-lgtm/Test/main/status.json';
      // ▼ 追加: 手動設定ファイルのURL ▼
      const manualUrl = 'https://raw.githubusercontent.com/x9mdq7dj4v-lgtm/Test/main/manual_status.json'; 
      const timestamp = new Date().getTime();

      // 並行して両方のファイルを取得する
      const [statusRes, manualRes] = await Promise.all([
        fetch(`${rawUrl}?t=${timestamp}`),
        fetch(`${manualUrl}?t=${timestamp}`).catch(() => null) // 手動ファイルが無い場合のエラー回避
      ]);

      if (!statusRes.ok) throw new Error('Network response was not ok');
      const data = await statusRes.json();

      // 手動データの読み込み
      let manualData = null;
      if (manualRes && manualRes.ok) {
        manualData = await manualRes.json();
      }

      setHeyeteCookie(timeCookie, now.toString(), 60);
      setHeyeteCookie(dataCookie, JSON.stringify(data), 60);
      // 今回は manualData はキャッシュせず常に最新を見に行くか、表示時のみ結合させます

      renderStatus(data, manualData); // 引数を追加
    } catch (error) {
      const loadingEl = document.getElementById('loading');
      if (loadingEl) {
        loadingEl.innerHTML = '<p class="error-text">⚠️ ステータス情報の取得に失敗しました。</p>';
      }
      console.error(error);
    }
  }

  // ▼ 引数に manualData を追加 ▼
  function generateServiceGroupHTML(title: string, services: any[], manualData: any = null) {
    let html = `
      <div class="service-group">
        <h3 class="group-title">${title}</h3>
        <div class="service-list">
    `;

    services.forEach((service: any) => {
      let icon = icons.ok;
      let statusText = '稼働中';
      let statusColor = 'status-ok';
      let latencyText = `${service.latency_ms || 0} ms`;

      // ▼ 手動フラグの上書き判定 ▼
      const isMaintenance = manualData?.maintenance?.active && 
        (manualData.maintenance.id?.includes('all') || manualData.maintenance.id?.includes(service.id));
        
      const isIncident = manualData?.incident?.active && 
        (manualData.incident.id?.includes('all') || manualData.incident.id?.includes(service.id));

      if (isMaintenance) {
        icon = icons.maintenance; // 先ほど追加したアイコン
        statusText = 'メンテ中';
        statusColor = 'status-maintenance';
        latencyText = '-'; // メンテ中はレイテンシを隠す
      } else if (isIncident) {
        icon = icons.down;
        statusText = '障害中';
        statusColor = 'status-down';
      } else {
        // ▼ 自動検知（status.json）の判定（通常時） ▼
        if (service.status === 'degraded') {
          icon = icons.warn;
          statusText = '警告・遅延';
          statusColor = 'status-warn';
        } else if (service.status === 'down') {
          icon = icons.down;
          statusText = '停止中';
          statusColor = 'status-down';
        } else if (service.status === 'unknown') {
          icon = icons.unknown;
          statusText = '不明';
          statusColor = 'status-unknown';
        }
      }

      html += `
        <div class="service-row">
          <div class="service-name">${service.name}</div>
          <div class="service-details">
            <span class="latency">${latencyText}</span>
            <div class="status-badge ${statusColor}">
              ${icon}
              <span>${statusText}</span>
            </div>
          </div>
        </div>
      `;
    });

    html += `</div></div>`;
    return html;
  }

  function renderStatus(data: any, manualData: any = null) {
    const container = document.getElementById('status-content')!;
    const loading = document.getElementById('loading')!;
    
    // 基本ステータス（自動検知）
    const isAllOk = data.system_status === 'all_systems_operational';
    let overallClass = isAllOk ? 'banner-ok' : 'banner-warning';
    let overallTitle = isAllOk ? 'すべてのシステムが正常に稼働しています' : '一部のシステムに問題が発生しています';
    let overallIcon = isAllOk ? icons.ok : icons.warn;
    let descriptionHTML = ''; // 詳細テキスト用

    // ▼ フラグの上書きロジック（優先度：メンテ > 手動障害 > 自動） ▼
    if (manualData) {
      if (manualData.maintenance?.active) {
        overallClass = 'banner-maintenance';
        overallTitle = manualData.maintenance.title || 'システムメンテナンス中です';
        overallIcon = icons.maintenance;
        if (manualData.maintenance.description) {
          descriptionHTML = `<p class="banner-desc">${manualData.maintenance.description}</p>`;
        }
      } else if (manualData.incident?.active) {
        overallClass = 'banner-down';
        overallTitle = manualData.incident.title || 'システム障害が発生しています';
        overallIcon = icons.down;
        if (manualData.incident.description) {
          descriptionHTML = `<p class="banner-desc">${manualData.incident.description}</p>`;
        }
      }
    }

    const updatedAt = new Date(data.last_updated).toLocaleString('ja-JP', {
      month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit'
    });

    // ▼ 描画内容を更新 ▼
    let html = `
      <div class="overall-banner ${overallClass}">
        <div class="banner-icon">${overallIcon}</div>
        <div class="banner-text">
          <h2>${overallTitle}</h2>
          ${descriptionHTML}
          <p class="update-time">最終更新: ${updatedAt}</p>
        </div>
      </div>
    `;

    
    if (data.api_services && data.api_services.length > 0) {
      html += generateServiceGroupHTML('APIサービス', data.api_services, manualData);
    }
    if (data.web_services && data.web_services.length > 0) {
      html += generateServiceGroupHTML('Webサービス', data.web_services, manualData);
    }

    container.innerHTML = html;
    loading.style.display = 'none';
    container.style.display = 'block';

  loadStatus();
  setInterval(loadStatus, 60000);
</script>

<style is:global>

  .status-wrapper {
    max-width: 800px;
    margin: 2rem auto;
  }


  .loading {
    text-align: center;
    padding: 4rem 0;
    color: #666;
  }
  .spinner {
    width: 30px; height: 30px;
    border: 3px solid #e5e5ea;
    border-top-color: #8e8e93;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem auto;
  }
  @keyframes spin { 100% { transform: rotate(360deg); } }


  .overall-banner {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  .banner-ok {
    background-color: #f0fdf4;
    border: 1px solid #bbf7d0;
  }
  .banner-warning {
    background-color: #fefce8;
    border: 1px solid #fef08a;
  }
  .banner-icon svg {
    width: 40px;
    height: 40px;
    margin-right: 1.2rem;
  }
  .banner-ok .banner-icon svg { color: #16a34a; }
  .banner-warning .banner-icon svg { color: #ca8a04; }
  
  .banner-text h2 {
    margin: 0 0 0.2rem 0;
    font-size: 1.25rem;
  }
  .update-time {
    margin: 0;
    font-size: 0.85rem;
    color: #666;
  }


  .service-group {
    margin-bottom: 2.5rem;
  }
  .group-title {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    padding-left: 0.5rem;
    border-left: 4px solid #0056b3;
    color: #333;
  }

  .service-list {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    border: 1px solid #eaeaea;
  }
  
  .service-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 1.5rem; 
    border-bottom: 1px solid #eaeaea;
  }
  .service-row:last-child {
    border-bottom: none;
  }
  .service-name {
    font-weight: 500;
    font-size: 1rem;
  }


  .service-details {
    display: flex;
    align-items: center;
    gap: 1.5rem; /* MSとアイコンの隙間 */
  }
  .latency {
    font-size: 0.9rem;
    color: #888;
    min-width: 60px;
    text-align: right;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    min-width: 90px;
    justify-content: center;
  }
  .status-icon {
    width: 16px;
    height: 16px;
  }

  .banner-maintenance {
    background-color: #eff6ff;
    border: 1px solid #bfdbfe;
  }
  .banner-maintenance .banner-icon svg { color: #2563eb; }
  
  .banner-down {
    background-color: #fef2f2;
    border: 1px solid #fecaca;
  }
  .banner-down .banner-icon svg { color: #dc2626; }

  .banner-desc {
    font-size: 0.95rem;
    color: #4b5563;
    margin: 0.5rem 0 0.8rem 0;
    line-height: 1.4;
  }


  .status-ok { background: #f0fdf4; color: #16a34a; }
  .status-warn { background: #fefce8; color: #ca8a04; }
  .status-down { background: #fef2f2; color: #dc2626; }
  .status-unknown { background: #f3f4f6; color: #4b5563; }
  .status-maintenance { background: #eff6ff; color: #2563eb; }
</style>
