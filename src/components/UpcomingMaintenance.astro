<div class="maintenance-widget">
  <div class="widget-header">
    <h3><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
      近日中のメンテナンス
    </h3>
  </div>
  
  <div id="maintenance-content">
    <div class="loading-mini">確認中...</div>
  </div>

  <div class="history-link">
    <a href="/history">メンテナンス履歴・予定一覧を見る &rarr;</a>
  </div>
</div>

<script>
  function escapeHTML(str) {
    if (typeof str !== 'string') return str;
    return str.replace(/[&'`"<>]/g, function(match) {
      return {
        '&': '&amp;',
        "'": '&#x27;',
        '`': '&#x60;',
        '"': '&quot;',
        '<': '&lt;',
        '>': '&gt;',
      }[match];
    });
  }

  async function fetchUpcomingMaintenance() {
    const container = document.getElementById('maintenance-content');
    if (!container) return;

    try {
      const url = 'https://raw.githubusercontent.com/x9mdq7dj4v-lgtm/Test/main/maintenance_info.json';
      const timestamp = new Date().getTime();
      const res = await fetch(`${url}?t=${timestamp}`);
      
      if (!res.ok) throw new Error('Network response was not ok');
      const data = await res.json();

      const now = new Date().getTime();
      const oneWeekLater = now + (7 * 24 * 60 * 60 * 1000);

      const upcoming = data.filter((m: any) => {
        const start = new Date(m.startAt).getTime();
        const end = new Date(m.endAt).getTime();
        return end > now && start <= oneWeekLater;
      });

      upcoming.sort((a: any, b: any) => new Date(a.startAt).getTime() - new Date(b.startAt).getTime());

      if (upcoming.length === 0) {
        container.style.opacity = '0';
        setTimeout(() => {
          container.innerHTML = '<div class="empty-card"><p class="empty-text">近日中に行われるメンテナンスはありません。</p></div>';
          container.style.opacity = '1';
        }, 200);
        return;
      }

      let html = '<ul class="maint-list">';
      upcoming.forEach((m: any) => {
        const startStr = new Date(m.startAt).toLocaleString('ja-JP', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        const endStr = new Date(m.endAt).toLocaleString('ja-JP', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        
        html += `
          <li class="maint-item">
            <div class="maint-time">${startStr} 〜 ${endStr}</div>
            <div class="maint-title">${escapeHTML(m.title)}</div>
            <div class="maint-desc">${escapeHTML(m.description)}</div>
          </li>
        `;
      });
      html += '</ul>';

      container.style.opacity = '0';
      setTimeout(() => {
        container.innerHTML = html;
        container.style.opacity = '1';
      }, 200);

    } catch (error) {
      console.error('メンテナンス情報の取得に失敗:', error);
      container.style.opacity = '0';
      setTimeout(() => {
        container.innerHTML = '<div class="empty-card"><p class="error-text">情報の取得に失敗しました。</p></div>';
        container.style.opacity = '1';
      }, 200);
    }
  }

  fetchUpcomingMaintenance();
</script>

<style>
  /* 全体のラッパー。枠をなくし、背景に溶け込ませます */
  .maintenance-widget {
    margin-bottom: 2.5rem;
  }
  
  /* ヘッダー周りの調整 */
  .widget-header {
    padding: 0 0.5rem 1rem 0.5rem;
  }
  .widget-header h3 {
    margin: 0;
    font-size: 1.15rem;
    font-weight: 600;
    color: #1d1d1f;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .icon {
    width: 22px;
    height: 22px;
    color: #86868b;
  }

  /* コンテンツエリア */
  #maintenance-content {
    min-height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  /* カラやエラー時の表示もカード状に */
  .empty-card {
    background: #ffffff;
    border-radius: 18px;
    padding: 2rem;
    box-shadow: 0 4px 14px rgba(0,0,0,0.03);
    text-align: center;
  }
  .empty-text, .loading-mini {
    color: #86868b;
    font-size: 0.95rem;
    margin: 0;
  }
  .error-text { 
    color: #ff3b30; 
    font-size: 0.95rem;
    margin: 0;
  }
  
  /* リストとアイテムのスタイリング（ここが最大の変更点です） */
  .maint-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem; /* 項目間にしっかりとした余白を確保 */
  }
  .maint-item {
    background: #ffffff;
    padding: 1.5rem;
    border-radius: 18px; /* Appleライクな滑らかな角丸 */
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.04), 0 1px 4px rgba(0, 0, 0, 0.02);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  /* ホバー時に少し浮き上がるようなインタラクション */
  .maint-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06), 0 2px 6px rgba(0, 0, 0, 0.03);
  }

  /* テキストのタイポグラフィ */
  .maint-time {
    font-size: 0.85rem;
    font-weight: 600;
    color: #0066cc;
    margin-bottom: 0.4rem;
    letter-spacing: 0.02em;
  }
  .maint-title {
    font-weight: 600;
    font-size: 1.1rem;
    color: #1d1d1f;
    margin-bottom: 0.5rem;
  }
  .maint-desc {
    font-size: 0.95rem;
    color: #86868b;
    line-height: 1.5;
  }
  
  /* 履歴リンクの調整 */
  .history-link {
    padding: 1.5rem 0.5rem 0 0.5rem;
    text-align: right;
  }
  .history-link a {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }
  .history-link a:hover {
    color: #004499;
  }
</style>
